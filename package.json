{
  "name": "vscode-llm-extension",
  "displayName": "Code LLM",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "publisher": "KaracaSoft",
  "license": "GPL2",
  "repository": {
    "url": "https://github.com/karacasoft/llm-extension"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Code LLM",
      "properties": {
        "codellm.llm": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai"
          ],
          "enumDescriptions": [
            "Use OpenAI for LLM completions"
          ]
        },
        "codellm.openai.apikey": {
          "type": "string",
          "description": "API key to be used for OpenAI requests"
        }
      }
    },
    "commands": [
      {
        "command": "vscode-llm-extension.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vscode-llm-extension.setOpenAIApiKey",
        "title": "Set OpenAI API Key"
      },
      {
        "command": "vscode-llm-extension.promptllm",
        "title": "Prompt for code"
      },
      {
        "command": "vscode-llm-extension.startllmsession",
        "title": "Start LLM session"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/showdown": "^2.0.1",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "openai": "^3.3.0",
    "showdown": "^2.1.0"
  }
}
